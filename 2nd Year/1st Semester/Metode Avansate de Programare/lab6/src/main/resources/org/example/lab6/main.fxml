<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <Label fx:id="userIdLabel"/>
    <TableView fx:id="userTable">
        <columns>
            <TableColumn fx:id="firstNameCol" text="First Name"/>
            <TableColumn fx:id="lastNameCol" text="Last Name"/>
        </columns>
    </TableView>
    <Button text="Add Friend" onAction="#handleAddFriend"/>
    <Button text="Remove Friend" onAction="#handleRemoveFriend"/>
    <Button text="Friend Requests" onAction="#handleFriendRequests"/>
    <Button text="Refresh" onAction="#handleRefresh"/>
    <Button text="Login as Another User" onAction="#handleLoginAsAnotherUser"/>
</VBox>