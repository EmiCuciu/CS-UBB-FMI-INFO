<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.practic.GUI.DispatcherWindowController">

    <VBox layoutX="14.0" layoutY="14.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

    <GridPane hgap="10" vgap="10">
            <Label text="Pickup Address:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="pickupAddressField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="destinationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Client Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="clientNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button onAction="#handleAddOrder" text="Add Order" />
        </HBox>
    </VBox>
</AnchorPane>
